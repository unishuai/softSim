<launch>
  <arg
    name="model" />
  <param
    name="robot_description"
    textfile="$(find hand_description)/urdf/hand_description.urdf" />
  <node
    name="joint_state_publisher_gui"
    pkg="joint_state_publisher_gui"
    type="joint_state_publisher_gui" />
    <!--rosparam param="sourse_list">[/joint_states_1]</rosparam-->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher">
    <remap from="joint_states" to="/joint_states_1" />
  </node>
  <node
    name="transformer"
    pkg="hand_description"
    type="transformer.py" 
    output="screen"/>
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find hand_description)/urdf.rviz" />
</launch>
